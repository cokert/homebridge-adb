{
	"pluginAlias": "HomebridgeADB",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "A simple homebridge script to control remote ADB enabled Android device",
	"footerDisplay": "For more information, see the [README](https://github.com/dwaan/homebridge-adb/blob/master/README.md)",
	"schema": {
	    "type": "object",
	    "properties": {
			"accessories": {
				"title": "Accessories",
				"type": "array",
				"required": true,
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"title": "Device Name",
							"placeholder": "Type your device name",
							"minLength": 1,
							"required": true
						},
						"ip": {
							"type": "string",
							"title": "IP Address",
							"placeholder": "Type your device IP address",
							"format": "ipv4",
							"required": true
						},
						"path": {
							"type": "string",
							"title": "ADB Path",
							"placeholder": "Type the complete of your ADB, eg: /usr/bin/ or c:\\adb-tools\\"
						},
						"mac": {
							"type": "string",
							"title": "MAC address",
							"placeholder": "Type your device MAC address",
							"format": "mac",
							"required": false
						},
						"timeout": {
							"type": "number",
							"title": "ADB Timeout",
							"placeholder": "Timeout for ADB commnad",
					        "oneOf": [
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2000", "enum": ["2000"] },
								{ "title": "3000", "enum": ["3000"] },
								{ "title": "4000", "enum": ["4000"] },
								{ "title": "5000", "enum": ["5000"] }
					        ]
						},
						"interval": {
							"type": "number",
							"title": "Polling interval",
							"placeholder": "Check your device every n miliseconds",
					        "oneOf": [
								{ "title": "500", "enum": ["500"] },
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2500", "enum": ["2500"] },
								{ "title": "5000", "enum": ["5000"] },
								{ "title": "7500", "enum": ["7500"] },
								{ "title": "10000", "enum": ["10000"] }
					        ]
						},
						"category": {
							"type": "string",
							"title": "Category",
							"placeholder": "Pick a category that suitable for your",
					        "oneOf": [
								{ "title": "Apple TV", "enum": ["APPLE_TV"] },
								{ "title": "Television", "enum": ["TELEVISION"] },
								{ "title": "Streaming Stick", "enum": ["TV_STREAMING_STICK"] },
								{ "title": "Set Top Box", "enum": ["TV_SET_TOP_BOX"] },
								{ "title": "Audio Reciever", "enum": ["AUDIO_RECEIVER"] },
								{ "title": "Speaker", "enum": ["SPEAKER"] }
					        ]
						},
						"inputs": {
							"title": "Inputs",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"title": "Name",
										"type": "string",
										"placeholder": "Your apps name",
										"required": true
									},
									"id": {
										"title": "App ID",
										"type": "string",
										"placeholder": "App ID (com.your.app.id)",
										"required": true
									},
									"adb": {
										"title": "or, Command",
										"type": "string",
										"placeholder": "eq: monkey -p home 1",
										"required": false
									}
								}
							}
						},
						"hidenumber": {
							"type": "boolean",
							"title": "Hide number inputs in Home App",
							"placeholder": "Hide number from inputs list in Home App",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"hidehome": {
							"type": "boolean",
							"title": "Hide 'Home' input in Home App",
							"placeholder": "Hide 'Home' input in Home App",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"hideother": {
							"type": "boolean",
							"title": "Hide 'Other' input in Home App",
							"placeholder": "Hide 'Other' input in Home App",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"playbacksensor": {
							"type": "boolean",
							"title": "Playback as Motion Sensor",
							"placeholder": "Playback as Motion Sensor",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"playbacksensordelay": {
							"type": "number",
							"title": "Sensor delay (ms)",
							"placeholder": "Playback as Motion Sensor delay",
					        "oneOf": [
								{ "title": "500", "enum": ["500"] },
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2500", "enum": ["2500"] },
								{ "title": "5000", "enum": ["5000"] },
								{ "title": "7500", "enum": ["7500"] },
								{ "title": "10000", "enum": ["10000"] }
					        ]
						},
						"playbacksensorexclude": {
							"type": "string",
							"title": "Exclude this app from Playback Sensor",
							"placeholder": "Exclude this app from Playback Sensor"
						},
						"debug": {
							"type": "boolean",
							"title": "Display more debug message",
							"placeholder": "Display more debug message",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"skipSpeaker": {
							"type": "boolean",
							"title": "Skip speaker/volume creation",
							"placeholder": "Skip speaker/volume creation",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"backbutton": {
							"type": "string",
							"title": "Back",
							"placeholder": "eg: KEYCODE_BACK",
							"minLength": 9
						},
						"playpausebutton": {
							"type": "string",
							"title": "Play/Pause",
							"placeholder": "eg: KEYCODE_MEDIA_PLAY_PAUSE",
							"minLength": 9
						},
						"infobutton": {
							"type": "string",
							"title": "Info",
							"placeholder": "eg: KEYCODE_HOME",
							"minLength": 9
						},
						"poweron": {
							"type": "string",
							"title": "Power On",
							"placeholder": "eg: KEYCODE_POWER"
						},
						"poweroff": {
							"type": "string",
							"title": "Power Off",
							"placeholder": "eg: KEYCODE_POWER"
						},
						"volumeup": {
							"type": "string",
							"title": "Volume Up",
							"placeholder": "eg: KEYCODE_VOLUME_UP"
						},
						"volumedown": {
							"type": "string",
							"title": "Volume Down",
							"placeholder": "eg: KEYCODE_VOLUME_DOWN"
						}
					}
				}
			}
		}
	},
	"layout": [
		{
			"key": "accessories",
			"type": "array",
			"items": [
				{
					"type": "flex",
					"items": [
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].name"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].ip",
									"flex": "2 2 200px"
								},
								{
									"key": "accessories[].category",
									"flex": "1 1 100px"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].path"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].timeout",
									"flex": "1 1 100px"
								},
								{
									"key": "accessories[].interval",
									"flex": "1 1 100px"
								}

							]
						},
						{
							"title": "Inputs",
							"key": "accessories[].inputs",
							"type": "array",
							"description": "Add more inputs to your device. This plugins only support max 50 inputs, after adding more then 50 inputs, you need to remove and readd your device to Home App for the inputs to be displayed properly. Check Homebridge logs for current App ID.",
							"items": [
								{
									"type": "flex",
									"displayFlex": false,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].inputs[].name",
											"flex": "3 3 70px"
										},
										{
											"key": "accessories[].inputs[].id",
											"flex": "5 5 170px"
										},
										{
											"key": "accessories[].inputs[].adb",
											"flex": "5 5 170px"
										}
									]
								}
							]
						},
						{
							"title": "Wake On LAN",
							"expandable": true,
							"expanded": false,
							"description": "Plugin will try to use Wake On LAN when you provide your device MAC address. Useful when your device disconnected from Network after it turned off.",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].mac",
											"flex": "1 1 100px"
										}
									]
								}
							]
						},
						{
							"title": "Playback Sensor",
							"expandable": true,
							"expanded": false,
							"description": "Create motion sensor based on media playback activities (limited device support)",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playbacksensor",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playbacksensordelay",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].playbacksensorexclude",
											"flex": "2 2 200px"
										}
									]
								}
							]
						},
						{
							"title": "Control Center Remote and Power ON/OFF",
							"expandable": true,
							"expanded": false,
							"description": "Assign custom ADB keycode for Control Center Remote. You can put one or more keycodes by seperating them with space, eg: \"KEYCODE_VOLUME_UP KEYCODE_VOLUME_DOWN\". You can also put a shell script instead of keycode to run your own command. Put \"shell\" identifier to let the plugins know it's a shell script, eq: \"shell sh ./myscript.sh\"",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].volumeup",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].volumedown",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playpausebutton",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].backbutton",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].infobutton",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].poweron",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].poweroff",
											"flex": "1 1 100px"
										}

									]
								}
							]
						},
					    {
							"title": "Settings",
							"expandable": true,
							"expanded": false,
							"description": "Other additional settings.",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].debug",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].skipSpeaker",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].hidenumber",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].hidehome",
											"flex": "1 1 100px"
										}											
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].hideother",
											"flex": "1 1 100px"
										}										
									]
								}
							]
					    }
					]
				}
			]
		}
	]
}
