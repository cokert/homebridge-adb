{
	"pluginAlias": "HomebridgeADB",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "A simple homebridge script to control remote ADB enabled Android device",
	"footerDisplay": "For more information, see the [README](https://github.com/dwaan/homebridge-adb/blob/master/README.md)",
	"schema": {
	    "type": "object",
	    "properties": {
			"accessories": {
				"title": "Accessories",
				"type": "array",
				"required": true,
				"items": {
					"type": "object",
					"properties": {
						"name": {
							"type": "string",
							"title": "Device Name",
							"placeholder": "Type your device name",
							"minLength": 1,
							"required": true
						},
						"ip": {
							"type": "string",
							"title": "IP Address",
							"placeholder": "Type your device IP address",
							"format": "ipv4",
							"required": true
						},
						"mac": {
							"type": "string",
							"title": "MAC address",
							"placeholder": "Type your device MAC address",
							"format": "mac",
							"required": false
						},
						"timeout": {
							"type": "number",
							"title": "Timeout",
							"placeholder": "Timeout for ADB commnad",
							"default": "1000",
					        "oneOf": [
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2000", "enum": ["2000"] },
								{ "title": "3000", "enum": ["3000"] },
								{ "title": "4000", "enum": ["4000"] },
								{ "title": "5000", "enum": ["5000"] }
					        ]
						},
						"interval": {
							"type": "number",
							"title": "Polling interval",
							"placeholder": "Check your device every n miliseconds",
							"default": "5000",
					        "oneOf": [
								{ "title": "500", "enum": ["500"] },
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2500", "enum": ["2500"] },
								{ "title": "5000", "enum": ["5000"] },
								{ "title": "7500", "enum": ["7500"] },
								{ "title": "10000", "enum": ["10000"] }
					        ]
						},
						"category": {
							"type": "string",
							"title": "Category",
							"placeholder": "Pick a category that suitable for your",
							"default": "TELEVISION",
					        "oneOf": [
								{ "title": "Apple TV", "enum": ["APPLE_TV"] },
								{ "title": "Television", "enum": ["TELEVISION"] },
								{ "title": "Streaming Stick", "enum": ["TV_STREAMING_STICK"] },
								{ "title": "Set Top Box", "enum": ["TV_SET_TOP_BOX"] },
								{ "title": "Audio Reciever", "enum": ["AUDIO_RECEIVER"] },
								{ "title": "Speaker", "enum": ["SPEAKER"] }
					        ]
						},
						"inputs": {
							"title": "Inputs",
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"name": {
										"title": "Name",
										"type": "string",
										"placeholder": "Your apps name",
										"required": true
									},
									"id": {
										"title": "App ID",
										"type": "string",
										"placeholder": "App ID (com.your.app.id)",
										"required": true
									},
									"adb": {
										"title": "or, Command",
										"type": "string",
										"placeholder": "eq: monkey -p home 1",
										"required": false
									}
								}
							}
						},
						"hidenumber": {
							"type": "boolean",
							"title": "Hide number inputs in Home App",
							"placeholder": "Hide number from inputs list in Home App",
							"default": "",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"hidehome": {
							"type": "boolean",
							"title": "Hide 'Home' input in Home App",
							"placeholder": "Hide 'Home' input in Home App",
							"default": "",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"hideother": {
							"type": "boolean",
							"title": "Hide 'Other' input in Home App",
							"placeholder": "Hide 'Other' input in Home App",
							"default": "",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"playbacksensor": {
							"type": "string",
							"title": "Playback as Motion Sensor",
							"placeholder": "Playback as Motion Sensor",
							"default": "true",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"playbacksensordelay": {
							"type": "number",
							"title": "Playback as Motion Sensor delay",
							"placeholder": "Playback as Motion Sensor delay",
							"default": "500",
					        "oneOf": [
								{ "title": "500", "enum": ["500"] },
								{ "title": "1000", "enum": ["1000"] },
								{ "title": "2500", "enum": ["2500"] },
								{ "title": "5000", "enum": ["5000"] },
								{ "title": "7500", "enum": ["7500"] },
								{ "title": "10000", "enum": ["10000"] }
					        ]
						},
						"playbacksensorexclude": {
							"type": "string",
							"title": "Exclude this app from Playback Sensor (ms)",
							"placeholder": "Exclude this app from Playback Sensor in miliseconds",
							"default": ""
						},
						"debug": {
							"type": "boolean",
							"title": "Display more debug message",
							"placeholder": "Display more debug message",
							"default": "",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"skipSpeaker": {
							"type": "boolean",
							"title": "Skip speaker/volume creation",
							"placeholder": "Skip speaker/volume creation",
							"default": "",
					        "oneOf": [
								{ "title": "Yes", "enum": ["true"] },
								{ "title": "No", "enum": ["false"] }
					        ]
						},
						"backbutton": {
							"type": "string",
							"title": "Back Button",
							"placeholder": "Type your custom 'back' key code",
							"minLength": 9,
							"default": "KEYCODE_BACK"
						},
						"playpausebutton": {
							"type": "string",
							"title": "Play/Pause Button",
							"placeholder": "Type your custom 'play/pause' key code",
							"minLength": 9,
							"default": "KEYCODE_MEDIA_PLAY_PAUSE"
						},
						"infobutton": {
							"type": "string",
							"title": "Info Button",
							"placeholder": "Type your custom 'info' key code",
							"minLength": 9,
							"default": "KEYCODE_HOME"
						},
						"poweron": {
							"type": "string",
							"title": "Power On Keycode",
							"placeholder": "Type your power on keycode",
							"default": "KEYCODE_POWER"
						},
						"poweroff": {
							"type": "string",
							"title": "Power Off Keycode",
							"placeholder": "Type your power off keycode",
							"default": "KEYCODE_POWER"
						}
					}
				}
			}
		}
	},
	"layout": [
		{
			"key": "accessories",
			"type": "array",
			"items": [
				{
					"type": "flex",
					"items": [
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].name"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].ip",
									"flex": "2 2 200px"
								},
								{
									"key": "accessories[].mac",
									"flex": "2 2 200px"
								}
							]
						},
						{
							"type": "flex",
							"displayFlex": true,
							"flex-direction": "row",
							"items": [
								{
									"key": "accessories[].category",
									"flex": "2 2 150px"
								},
								{
									"key": "accessories[].timeout",
									"flex": "1 1 100px"
								},
								{
									"key": "accessories[].interval",
									"flex": "1 1 100px"
								}

							]
						},
						{
							"title": "Inputs",
							"key": "accessories[].inputs",
							"type": "array",
							"description": "Add more inputs to your device. This plugins only support max 50 inputs, after adding more then 50 inputs, you need to remove and readd your device to Home App for the inputs to be displayed properly. Check Homebridge logs for current App ID.",
							"items": [
								{
									"type": "flex",
									"displayFlex": false,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].inputs[].name",
											"flex": "3 3 70px"
										},
										{
											"key": "accessories[].inputs[].id",
											"flex": "5 5 170px"
										},
										{
											"key": "accessories[].inputs[].adb",
											"flex": "5 5 170px"
										}
									]
								}
							]
						},
						{
							"title": "Playback Sensor",
							"expandable": true,
							"expanded": false,
							"description": "Create motion sensor based on media playback activities",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playbacksensor",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].playbacksensordelay",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playbacksensorexclude"
										}
									]
								}
							]
						},
						{
							"title": "Control Center Remote KeyCode",
							"expandable": true,
							"expanded": false,
							"description": "Use costum keycode for control center remote.",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].playpausebutton",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].backbutton",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].infobutton",
											"flex": "1 1 100px"
										}
									]
								}
							]
						},
						{
							"title": "Power KeyCode",
							"expandable": true,
							"expanded": false,
							"description": "Use costum keycode to power on/off your device.",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].poweron",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].poweroff",
											"flex": "1 1 100px"
										}

									]
								}
							]
						},
					    {
							"title": "Settings",
							"expandable": true,
							"expanded": false,
							"description": "Other additional settings.",
							"items": [
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].debug",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].skipSpeaker",
											"flex": "1 1 100px"
										}
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].hidenumber",
											"flex": "1 1 100px"
										},
										{
											"key": "accessories[].hidehome",
											"flex": "1 1 100px"
										}											
									]
								},
								{
									"type": "flex",
									"displayFlex": true,
									"flex-direction": "row",
									"items": [
										{
											"key": "accessories[].hideother",
											"flex": "1 1 100px"
										}										
									]
								}
							]
					    }
					]
				}
			]
		}
	]
}
